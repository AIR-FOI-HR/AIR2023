<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="VectorDrawableCompat">

    <RelativeLayout
        android:id="@+id/relativeBlueBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorBlue"/>

    <RelativeLayout
        android:id="@+id/relativeIcon"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="140dp">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/colorWhite">

            <androidx.cardview.widget.CardView
                android:layout_width="116dp"
                android:layout_height="116dp"
                app:cardCornerRadius="58dp"
                android:layout_margin="2dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="116dp"
                    android:layout_height="116dp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/slikaProfila"
                    android:src="@drawable/profil"
                    android:background="@color/colorWhite"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/slikaProfila"
                    android:id="@+id/slikaZnacke"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeIcon">

        <TextView
            android:id="@+id/ime_prezime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:text="Ime prezime"
            android:textSize="23dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/relativeBlueBackground">

        <RelativeLayout
            android:id="@+id/relativeLayoutPodaci"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="0dp">

                    <TextView
                        android:id="@+id/email_text_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:inputType="text"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/email_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp"
                        android:inputType="text"
                        android:text="Email"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/adresa_text_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="13dp"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:text="@string/adresa"/>

                    <TextView
                        android:id="@+id/adresa_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp"
                        android:inputType="text"
                        android:text="Adresa"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/broj_mobitela_text_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="13dp"
                        android:inputType="text"
                        android:text="@string/telefon"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/broj_mobitela_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="20dp"
                        android:inputType="text"
                        android:text="Broj mobitela"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btnUrediProfil"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/cv"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/urediProfil"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:backgroundTint="@color/colorBlue"
                style="@style/Widget.MaterialComponents.Button"
                tools:ignore="NotSibling"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
