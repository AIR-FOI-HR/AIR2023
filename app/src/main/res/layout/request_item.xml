<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/general_margin"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/general_margin"
    android:id="@+id/parentRequest"
    android:background="?android:selectableItemBackground">




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="94dp"
            android:layout_height="94dp"
            app:cardCornerRadius="50dp"
            android:backgroundTint="@color/colorWhite">

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="50dp"
                android:layout_margin="2dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/requestImage"
                    android:src="@drawable/profil"
                    android:background="@color/colorWhite"
                    android:contentDescription="@string/picture" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/general_margin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/requestTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginEnd="@dimen/general_margin"
                        android:gravity="left"
                        android:text="@string/requestRecyclerView"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textIsSelectable="false" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="8dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/location" />

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/textRequestLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/requestLocation"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/general_margin"
                        android:textIsSelectable="false"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        app:cardCornerRadius="50dp"
                        android:backgroundTint="@color/colorWhite">

                        <androidx.cardview.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:cardCornerRadius="50dp"
                            android:layout_margin="2dp"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/trophyRequestImage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerHorizontal="true"
                                android:background="@color/colorWhite"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profil"
                                android:contentDescription="@string/picture" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/textRequestGrade"
                        android:text="@string/gradeRequest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textRequestPrice"
                        android:text="@string/pricePerKg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="110dp">

        <ImageButton
            android:id="@+id/request_accept"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/accept_request"
            android:background="@drawable/request_button_design"
            />


        <ImageButton
            android:id="@+id/request_decline"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@drawable/request_button_design"
            android:src="@drawable/decline_request"
            />


    </LinearLayout>


</androidx.cardview.widget.CardView>




