<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="VectorDrawableCompat">

    <RelativeLayout
        android:id="@+id/relativeBlueBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorBlue"/>

    <RelativeLayout
        android:id="@+id/relativeIcon"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="104dp"
            android:layout_height="104dp"
            app:cardCornerRadius="60dp"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/colorWhite">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="58dp"
                android:layout_margin="2dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/slikaProfila"
                    android:src="@drawable/profil"
                    android:background="@color/colorWhite"
                    android:contentDescription="@string/picture" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/slikaProfila"
                    android:id="@+id/slikaZnacke"
                    android:contentDescription="@string/badge" />


            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <Button
        android:id="@+id/btnUcitajSLiku"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/relativeIcon"
        android:text="@string/ucitaj_sliku"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorBlue"
        style="@style/Widget.MaterialComponents.Button" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnUcitajSLiku">

        <RelativeLayout
            android:id="@+id/relativeLayoutPodaci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ime_text_ep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/name"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/ime_edit_ep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:inputType="text"
                        android:text=""/>

                    <TextView
                        android:id="@+id/prezime_text_ep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/surname"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/prezime_edit_ep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:inputType="text"
                        android:text=""/>

                    <TextView
                        android:id="@+id/email_text_pe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/username"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/email_edit_pe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/adresa_text_pe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:text="@string/adresa"/>

                    <EditText
                        android:id="@+id/adresa_edit_pe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:inputType="text"/>

                    <TextView
                        android:id="@+id/broj_mobitela_text_pe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/telefon"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/broj_mobitela_edit_pe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:inputType="text"/>

                    <TextView
                        android:id="@+id/lozinka_text_pe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/password"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/lozinka_edit_pe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:inputType="textPassword"/>

                </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnOdustani"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="@string/Odustani"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:backgroundTint="@color/colorGrayBlue"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_marginEnd="10dp"/>

                    <Button
                        android:id="@+id/btnSpremiPromjene"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="@string/saveChanges"
                        android:textColor="@color/colorWhite"
                        android:backgroundTint="@color/colorBlue"
                        android:layout_toEndOf="@id/btnOdustani"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_marginStart="10dp"/>

                </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
