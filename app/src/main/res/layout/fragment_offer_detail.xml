<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="VectorDrawableCompat">

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorBlue"/>



    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:elevation="5dp"
        android:text="@string/offerDetails"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/relativeIcon"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="80dp">

        <androidx.cardview.widget.CardView
            android:layout_width="104dp"
            android:layout_height="104dp"
            app:cardCornerRadius="70dp"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/colorWhite">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="58dp"
                android:layout_margin="2dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/slikaProfila"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorWhite"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profil" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/slikaProfila"
                    android:id="@+id/slikaZnacke"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeBlueBackground"
        android:layout_marginTop="100dp">

        <RelativeLayout
            android:id="@+id/relativeLayoutPodaci"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/naziv_ponude_od"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Naziv ponude"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/location" />

                        <TextView
                            android:id="@+id/lokacija_ponude_od"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokacija"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/cijena_ponude_od"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="25,00 kn"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/razred_ribe_od"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Razred: 2"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="40dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorWhite"
                        app:cardCornerRadius="70dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="2dp"
                            app:cardCornerRadius="58dp">

                            <ImageView
                                android:id="@+id/slikaPonuditelja"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:background="@color/colorWhite"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profil"/>

                            <ImageView
                                android:id="@+id/slikaZnackePonuditelja"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/slikaProfila"/>

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            >

                        <TextView
                            android:id="@+id/imePrezimePonuditelja"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Ime Prezime"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/chat"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/chat"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="Kontaktiraj"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnRezerviraj"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="@color/colorBlue"
                        android:text="@string/reserve"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
